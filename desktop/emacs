 '(org-agenda-files (quote ("~/todo.org"))))
(custom-set-faces
  ;; custom-set-faces was added by Custom.
  ;; If you edit it by hand, you could mess it up, so be careful.
  ;; Your init file should contain only one such instance.
  ;; If there is more than one, they won't work right.
 '(default ((t (:inherit nil :stipple nil :background "white" :foreground "black" :inverse-video nil :box nil :strike-through nil :overline nil :underline nil :slant normal :weight normal :height 115 :width normal :foundry "unknown" :family "Droid Sans Mono")))))


(set-default-font "DejaVu Sans-12")
(global-set-key "\C-ca" 'org-agenda) ;; 启用 Agenda 视图
(setq org-agenda-files (list "~/work/todo.org"))
(setq org-todo-keywords
      '((sequence "TODO" "DOING" "HANGUP" "|" "DONE" "CANCEL")))

(desktop-save-mode 1)
